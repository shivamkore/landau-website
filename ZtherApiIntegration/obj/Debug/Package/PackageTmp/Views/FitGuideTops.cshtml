@using ZtherApiIntegration.Common

<section id="fitguide_detail_page" class="womans_scrub_tops clearfix">
    <div class="banner">
        <div class="video_overlay"></div>
        <img class="video_exit" srcset="public/images/fitguide/detail/close_x.svg" />
        <div class="video_container">
            <iframe id="iframe" width="100%" height="100%" src="https://www.youtube.com/embed/JATw4hNyA68?wmode=transparent" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="content">
            <h1>
                <span>
                    <picture>
                        <img srcset="public/images/fitguide/detail/womans_st_text.png 1x, public/images/fitguide/detail/womans_st_text@2x.png 2x" alt="Women's Scrub Tops">
                    </picture>
                </span>
                <span class="bot">Find Your Fit</span>
            </h1>
            <div class="play_btn">
                <div class="play" alt=""></div>
            </div>
        </div>
    </div>
    <div class="main_content">
        <div class="fitguide_content">
            <div class="fit_guide">
                <div class="content">
                    <h2>Top Fit Guide</h2>
                    <p>Here's a simple and consistent way to shop scrub tops in three distinct fit categories. Click on Modern, Relaxed or Classic to find the essential top features that define your favorite fit.</p>
                    <div class="view">
                        <a class="size">Measurement Chart <span class="arrow">&#xe805;</span></a>
                    </div>
                </div>
            </div>
            <div class="product_blocks">
                <div class="product img_left tops_modern gold clearfix">
                    <div class="image">
                        <div class="visible-xs">
                            <div class="text">
                                <h2>Modern</h2>
                                <div class="sub-header">Contoured to Your Curves</div>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="text_wrap">
                            <h2>Modern</h2>
                            <div class="text">Contoured to Your Curves</div>
                        </div>
                        <!-- .text wrap -->
                    </div>
                </div>
                <!-- .product -->
                <div class="product img_right tops_relaxed blue clearfix">
                    <div class="image">
                        <div class="visible-xs">
                            <div class="text">
                                <h2>Relaxed</h2>
                                <div class="sub-header">An Easier Fit With Some Shaping</div>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="text_wrap">
                            <h2>Relaxed</h2>
                            <div class="text">An Easier Fit With Some Shaping</div>
                        </div>
                        <!-- .text wrap -->
                    </div>
                </div>
                <!-- .product -->
                <div class="product img_left tops_classic purple clearfix">
                    <div class="image">
                        <div class="visible-xs">
                            <div class="text">
                                <h2>Classic</h2>
                                <div class="sub-header">Generously Cut for Optimum Comfort</div>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="text_wrap">
                            <h2>Classic</h2>
                            <div class="text">Generously Cut for Optimum Comfort</div>
                        </div>
                        <!-- .text wrap -->
                    </div>
                </div>
                <!-- .product -->
            </div>
            <a href="@UrlBuilder.BuildFullUrl(UrlEnum.FIT_GUIDE_PANTS)" class="view_fitguide">
                <span class="text">View Pant Fit Guide <span class="arrow">&#xe805;</span></span>
            </a>
        </div>
        <div class="size_chart_flyout">
            <div class="close_col">
                <img src="public/images/fitguide/detail/close_x.svg" alt="">
            </div>
            <div class="size_chart desktop">
                <h2>
                    <span>Measurement Chart</span>
                </h2>
                <div class="chart clearfix">
                    <div class="col labels">
                        <span class="top first"></span>
                        <span class="second">Bust</span>
                        <span>Waist</span>
                        <span>Hips</span>
                    </div>
                    <div class="col">
                        <span class="top">XXS</span>
                        <span class="second">30-31</span>
                        <span>23-24</span>
                        <span>32-33</span>
                    </div>
                    <div class="col">
                        <span class="top">XSM</span>
                        <span class="second">32-33</span>
                        <span>25-26</span>
                        <span>34-35</span>
                    </div>
                    <div class="col">
                        <span class="top">SML</span>
                        <span class="second">34-35</span>
                        <span>27-28</span>
                        <span>36-37</span>
                    </div>
                    <div class="col">
                        <span class="top">MED</span>
                        <span class="second">36-37</span>
                        <span>29-31</span>
                        <span>38-40</span>
                    </div>
                    <div class="col">
                        <span class="top last">LGE</span>
                        <span class="second">38-40</span>
                        <span>32-34</span>
                        <span>41-43</span>
                    </div>
                    <div class="col">
                        <span class="top">XLG</span>
                        <span class="second">41-44</span>
                        <span>35-38</span>
                        <span>44-47</span>
                    </div>
                    <div class="col">
                        <span class="top">XXL</span>
                        <span class="second">45-48</span>
                        <span>39-41</span>
                        <span>48-51</span>
                    </div>
                    <div class="col">
                        <span class="top">3XL</span>
                        <span class="second">49-52</span>
                        <span>42-45</span>
                        <span>52-55</span>
                    </div>
                    <div class="col">
                        <span class="top">4XL</span>
                        <span class="second">53-56</span>
                        <span>46-49</span>
                        <span>56-59</span>
                    </div>
                    <div class="col">
                        <span class="top">5XL</span>
                        <span class="second">57-60</span>
                        <span>50-53</span>
                        <span>60-63</span>
                    </div>
                </div>
            </div>

            <div class="size_chart mobile">
                <h2>
                    <span>Measurement Chart</span>
                </h2>
                <div class="chart clearfix">
                    <div class="col labels">
                        <span class="top first"></span>
                        <span class="second">XXS</span>
                        <span>XSM</span>
                        <span>SML</span>
                        <span>MED</span>
                        <span>LRG</span>
                        <span>XLG</span>
                        <span>XXG</span>
                        <span>3XL</span>
                        <span>4XL</span>
                        <span>5XL</span>
                    </div>
                    <div class="col">
                        <span class="top">Bust</span>
                        <span class="second">30-31</span>
                        <span>32-33</span>
                        <span>34-35</span>
                        <span>36-37</span>
                        <span>38-40</span>
                        <span>41-44</span>
                        <span>45-48</span>
                        <span>49-52</span>
                        <span>53-56</span>
                        <span>57-60</span>
                    </div>
                    <div class="col">
                        <span class="top">Waist</span>
                        <span class="second">23-24</span>
                        <span>25-26</span>
                        <span>27-28</span>
                        <span>29-31</span>
                        <span>32-34</span>
                        <span>35-38</span>
                        <span>39-41</span>
                        <span>42-45</span>
                        <span>46-49</span>
                        <span>50-53</span>
                    </div>
                    <div class="col">
                        <span class="top">Hips</span>
                        <span class="second">32-33</span>
                        <span>34-35</span>
                        <span>36-37</span>
                        <span>38-40</span>
                        <span>41-43</span>
                        <span>44-47</span>
                        <span>48-51</span>
                        <span>52-55</span>
                        <span>56-59</span>
                        <span>60-63</span>
                    </div>
                </div>
            </div>
            <!-- .size chart -->

            <div class="tips">
                <div class="content">
                    <h2>Measuring Tips</h2>
                    <h3>Here are some tips to help you find the correct size. If you don't have a measuring tape, use a piece of string and hold it alongside a ruler.</h3>
                    <div class="text">
                        <div class="r clearfix">
                            <h4>Bust</h4>
                            <p>Measure fullest part of chest over apex point.</p>
                        </div>
                        <div class="r clearfix">
                            <h4>Waist</h4>
                            <p>Measure at smallest indentation of natural waistline.</p>
                        </div>
                        <div class="r clearfix">
                            <h4>Hips</h4>
                            <p>Measure fullest curve of hip - approximately 8" below waistline.<br>(For all measurements, pull tape snug, but not stretched)</p>
                        </div>
                        <div class="r clearfix">
                            <h4>Note</h4>
                            <p>Garments will typically measure larger to ensure ease of movement. Sizes may differ slightly due to styling. Dress size conversions are for reference only. It is usually recommended to order up in size if measurements fall at the higher end of size scale.</p>
                        </div>
                    </div>
                    <!-- .text -->
                </div>
            </div>
            <!-- .tips -->

        </div>
        <!-- .size chart flyout -->
    </div>
</section>
