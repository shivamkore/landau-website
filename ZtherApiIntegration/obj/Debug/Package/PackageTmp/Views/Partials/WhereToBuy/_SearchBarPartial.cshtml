@using ZtherApiIntegration.Models.WhereToBuy;
@using ZtherApiIntegration.Common;
@model List<CountryModel>

<div class="search_bar">
    <div class="left">
        <div class="input">
            <div class="title">U.S. Retailers</div>
            <div class="mobile_arrow">&#xe800;</div>
            <div class="dropdown_wrapper">
                <form action="#">
                    <input type="text" placeholder="Enter City and State or Zip Code" class="text" required>
                    <button type="button" value="" class="arrow">
                        <div>&#xe800;</div>
                    </button>
                </form>
                <div class="validation-text">Input invalid. Insert validation text here.</div>
            </div>
        </div>
    </div>

    <div class="right">
        <div class="input international_btn">
            <div class="title">
                <span class="text">
                <span class="desktop">International</span>
                <span class="mobile">Intl</span> Retailers</span>
                <span class="arrow">&#xe800;</span>
            </div>
        </div>
        <ul class="international_container">
            <div class="column_container">
               @{
                   var blockCount = (int)Math.Round((decimal)(Model.Count / 4)) + 1;
                   for (int i = 0; i <= 4; i++)
                   {
                    <div class="column">

                        @for (int j = (i* blockCount); j< Model.Count && j < ((i+1) * blockCount); j++)
                        {
                            var country = Model[j];
                            <li>
                                <a href="@UrlBuilder.BuildInternationalRetailerUrl(country.Code)">@country.Name</a>
                                <span></span>
                            </li>
                        }
                    </div>
                   }
            }
            </div>
        </ul>
    </div>
</div>


