@using ZtherApiIntegration.Models.Swatch
@model List<SwatchItemModel>


@foreach (var print in Model)
{
    <div class="product">
        <div class="image_icon">
            @if (string.IsNullOrEmpty(print.ImageURI))
            {
                <span class="image" style="background-color:#@print.PrimaryHex;"></span>
            }
            else
            {
                <span class="image" style="background-image: url('@print.ImageURI');"></span>
            }
        </div>
        <div class="text">
            <h2>@print.ColorName</h2>
            <div class="id">@print.ColorCode</div>
        </div>
        <div class="arrow"></div>
        <div class="hover_selection">
            <div class="inner">
                <div class="close_btn">
                    <img src="public/images/prints/close_x_white.png" alt="">
                </div>
                <div class="top">
                    <div class="image_icon">
                        @if (string.IsNullOrEmpty(print.ImageURI))
                        {
                            <span class="image" style="background-color:#@print.PrimaryHex;"></span>
                        }
                        else
                        {
                            <span class="image" style="background-image: url('@print.ImageURI');"></span>
                        }
                    </div>
                    <div class="text">
                        <h2>@print.ColorName</h2>
                        <p>Available in the following garment styles. Click on the image below to view garment details.</p>
                    </div>
                </div>

                <div class="bottom">
                    <div class="products clearfix" style="height: 250px;">
                    </div>
                    <!--.products clearfix-->
                </div>


            </div>
        </div>
    </div>
}
