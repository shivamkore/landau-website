@using ZtherApiIntegration.Models
@model PaginationModel

@if (Model.CurrentPage > 0)
{
    <div class="pagination_container">
        <a href="javascript:previousPage();" class="prev page_button">
            <div class="arrow">&#xe800;</div>
        </a>
        <div class="pages">
            <a href="#">@Model.CurrentPage</a> -
            <a href="#">@Model.PageCount</a>
        </div>
        <a href="@(Model.CurrentPage<Model.PageCount ? "javascript:nextPage();" : "#")" class="next page_button">
            <div class="arrow">&#xe800;</div>
        </a>
    </div>
}
