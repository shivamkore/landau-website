@using ZtherApiIntegration.Models.Catalog
@model FilterModel

 @if (Model.FilterDisplay.DisplayFitFilter)
{
    
    <li class="dropdown">
        <a class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="true">
            Fit Type <span>&#xe800;</span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <ul class="ul-category mob_fit_type">
                    @foreach (var dropDownItem in Model.FitTypes)
                    {
                        <li><a class="mob_dropdownFilter @(dropDownItem.Selected ? "active" : "")" value="@dropDownItem.EncodedValue" data-name="@dropDownItem.Name">@dropDownItem.Value</a></li>
                    }
                </ul>
            </li>
        </ul>
    </li>
    }

    @if (Model.FilterDisplay.DisplaySizeFilter)
