@using ZtherApiIntegration.Models.Groups
@model GroupModel

<div id="group_order">
    <div class="top">
        <h1 class="header">Group Order</h1>
        <div class="sub_header">Request Form</div>
        <div class="body">
            Thank you for your interest in Landau Uniforms, the leader in premium uniforms for over 50 years. While we do not sell direct, if you are interested in placing a large order we are here to help! Please take a moment to complete the form below. A Landau
            representative will contact you within two business days.
        </div>
    </div>
    <div class="form_container">
        @using (Html.BeginForm("Create", "Groups", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
		    <!-- <form> -->
            <div class="section1">
                <div class="inner_container">
                    <h2 class="title">Inquiry Information</h2>
                    <div class="form-row clearfix">
                        <div class="name_container left">
                            <label class="">
                                First Name
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.FirstName, new { required = "required"})
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="name_container right">
                            <label class="">
                                Last Name
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.LastName, new { required = "required"})
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                    </div>
                    <div class="form-row clearfix">
                        <div class="company_container">
                            <label class="">
                                Company Name
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.CompanyName, new { required = "required" })
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="industry_container">
                            <label class="">
                                Industry
                                <span class="asterisk">*</span>
                            </label>
                            <div class="select">
                                <span class="arrow">&#xe800;</span>
                                <div class="desktop select_dropdown_parent">
                                    <a value="" class="placeholder">Select an Industry</a>
                                    <div class="options_container select_dropdown">
                                        @for (int i = 0; i < Model.Inquiry.IndustryList.Count; i++)
                                        {
                                            var aValue = Model.Inquiry.IndustryList[i].Name;
                                            var aName = Model.Inquiry.IndustryList[i].Name;
                                            <li><a class="anchorState" value="@aValue">@aName</a></li>
                                        }
                                    </div>
                                </div>
                                <select class="mobile" required>
                                    <option disabled selected value="">Select an Industry</option>
                                    @for (int i = 0; i < Model.Inquiry.IndustryList.Count; i++)
                                    {
                                        var aValue = Model.Inquiry.IndustryList[i].Name;
                                        var aName = Model.Inquiry.IndustryList[i].Name;
                                        <option value="@aValue">@aName</option>
                                    }
                                </select>
                                @{Model.Inquiry.Industry.Name = "";}
                                @Html.HiddenFor(GroupModel => GroupModel.Inquiry.Industry.Name, new { id = "hiddenIndustry" })
                            </div>
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                    </div>
                    <div class="address_container">
                        <label class="">
                            Address
                            <span class="asterisk">*</span>
                        </label>
                        @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Address.Street1, new { required = "required" })
                        <div class="validation-text">Input invalid. Insert validation text here.</div>
                    </div>
                    <div class="form-row">
                        <div class="city_container">
                            <label class="">
                                City
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Address.City, new { required = "required" })
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="state_container">
                            <label class="">
                                State
                                <span class="asterisk">*</span>
                            </label>
                            <div class="select">
                                <span class="arrow">&#xe800;</span>
                                <div class="desktop select_dropdown_parent">
                                    <a value="" class="placeholder">&#32;</a>
                                    <div class="options_container scrollable select_dropdown">
                                        @for (int i = 0; i < Model.Inquiry.StateList.Count; i++)
                                        {
                                            var aStateValue = Model.Inquiry.StateList[i].Abbrev.ToUpper();
                                            var aStateName = Model.Inquiry.StateList[i].Abbrev;
                                            <li><a class="anchorState" value="@aStateValue">@aStateName</a></li>
                                        }
                                    </div>
                                </div>
                                <select class="mobile" required>
                                    <option disabled selected value=""></option>
                                    @for (int i = 0; i < Model.Inquiry.StateList.Count; i++)
                                    {
                                        var aStateValue = Model.Inquiry.StateList[i].Abbrev.ToUpper();
                                        var aStateName = Model.Inquiry.StateList[i].Abbrev;
                                        <option value="@aStateValue">@aStateName</option>
                                    }
                                </select>
                                @{Model.Inquiry.Address.State = "";}
                                @Html.HiddenFor(GroupModel => GroupModel.Inquiry.Address.State, new { id = "hiddenState" })
                            </div>
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="zipcode_container">
                            <label class="">
                                Zip Code
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Address.Zipcode, new { required = "required" })
                            <div id="zip-validation" class="validation-text">Please enter a valid zipcode</div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="phone_container">
                            <label class="">
                                Phone
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Phone, new { required = "required", type = "tel" })
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="cell_container">
                            <label class="">Cell</label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Cell)
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="email_container">
                            <label class="">
                                Email
                                <span class="asterisk">*</span>
                            </label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Email, new { required = "required", type = "email" })
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="web_container">
                            <label class="">Web</label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Inquiry.Web)
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                    </div>
                    <div class="required_field">
                        <span class="asterisk">*</span>
                        <span class="text">Required Fields</span>
                    </div>
                </div>
            </div>
            <div class="section2">
                <div class="inner_container">
                    <h2 class="title">About Purchase</h2>
                    <label class="sub_title">Are you selling to another company? If yes, please enter company name.</label>
                    <div class="vendor_input_wrapper">
                        @Html.TextBoxFor(GroupModel => GroupModel.Purchase.AreYouSellingToOther, new { @class = "vendor_input" })
                        <div class="validation-text">Input invalid. Insert validation text here.</div>
                    </div>
                    <div class="box_container">
                        <div class="left">
                            <label>Are you the decision maker for your company?</label>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.AreYouTheDecisionMaker, true, new { @name = "radio1", required = "required" })
                                <span class="radio_btn"></span>Yes
                            </label>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.AreYouTheDecisionMaker, false, new { @name = "radio1", required = "required" })
                                <span class="radio_btn"></span>No
                            </label>
                        </div>
                        <div class="right">
                            <label class="">If not, who is?</label>
                            @Html.TextBoxFor(GroupModel => GroupModel.Purchase.IfNotDecisionMakerWhoIs)
                        </div>
                        <div class="validation-text">Input invalid. Insert validation text here.</div>
                    </div>
                    <div class="two_column ammount_container">
                        <div class="left">
                            <label>Number of professionals to be outfitted:</label>
                            <div class="select">
                                <span class="arrow">&#xe800;</span>
                                <div class="desktop select_dropdown_parent">
                                    <a value="-100" class="placeholder">Less Than a 100</a>
                                    <div class="options_container select_dropdown">
                                        @{
                                            var aOutfittedValue = "-100";
                                            var aOutfittedText = Model.Purchase.OutfittedList[0].Value;
                                        }
                                        <li><a value="@aOutfittedValue">@aOutfittedText</a></li>
                                        @for (int i = 1; i < Model.Purchase.OutfittedList.Count; i++)
                                        {
                                            aOutfittedValue = Model.Purchase.OutfittedList[i].Key;
                                            aOutfittedText = Model.Purchase.OutfittedList[i].Value;
                                            <li><a class="anchorOutfitted" value="@aOutfittedValue">@aOutfittedText</a></li>
                                        }
                                    </div>
                                </div>
                                <select class="mobile" required>
                                    <option selected value="-100">Less Than a 100</option>
                                    @{
                                        aOutfittedValue = "-100";
                                        aOutfittedText = Model.Purchase.OutfittedList[0].Value;
                                    }
                                    @for (int i = 1; i < Model.Purchase.OutfittedList.Count; i++)
                                    {
                                        aOutfittedValue = Model.Purchase.OutfittedList[i].Key;
                                        aOutfittedText = Model.Purchase.OutfittedList[i].Value;
                                        <option value="@aOutfittedValue">@aOutfittedText</option>
                                    }
                                </select>
                                @{Model.Purchase.NumberOfOutfitted = "";}
                                @Html.HiddenFor(GroupModel => GroupModel.Purchase.NumberOfOutfitted, new { id = "hiddenOutFitted" })
                            </div>
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                        <div class="right">
                            <label>Who will wear the uniforms (select one or both)?</label>
                            <div>
                                <label class="checkbox_label">
                                    @Html.TextBoxFor(GroupModel => GroupModel.Purchase.WhoWillWearPatientCare, new { required = "required", Name = "check1", type = "checkbox" })
                                    <span class="checkbox_btn gray"></span>
                                    <span class="option">Patient-Care Professionals</span>
                                </label>
                                @Html.HiddenFor(GroupModel => GroupModel.Purchase.WhoWillWearPatientCare, new { id = "hiddenWhoWillWearPatientCare" })
                            </div>
                            <div>
                                <label class="checkbox_label">
                                    @Html.TextBoxFor(GroupModel => GroupModel.Purchase.WhoWillWearNonMedical, new { required = "required", Name = "check1", type="checkbox" })
                                    <span class="checkbox_btn gray"></span>
                                    <span class="option">Non-Medical Personnel</span>
                                </label>
                                @Html.HiddenFor(GroupModel => GroupModel.Purchase.WhoWillWearNonMedical, new { id = "hiddenWhoWillWearNonMedical" })
                            </div>
                            <div class="validation-text">Input invalid. Insert validation text here.</div>
                        </div>
                    </div>
                    <div class="divider"></div>
                    <div class="two_column outfit_container">
                        <label>Which are you seeking to outfit (select one)?</label>
                        <div>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.WhichAreYouSeekingToOutfit, "A Single Department", new { @name = "radio3", required = "required" })
                                <span class="radio_btn gray"></span>
                                <span class="option">A Single Department</span>
                            </label>
                        </div>
                        <div>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.WhichAreYouSeekingToOutfit, "Multiple Departments", new { @name = "radio3", required = "required" })
                                <span class="radio_btn gray"></span>
                                <span class="option">Multiple Departments</span>
                            </label>
                        </div>
                        <div>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.WhichAreYouSeekingToOutfit, "An Entire Location", new { @name = "radio3", required = "required" })
                                <span class="radio_btn gray"></span>
                                <span class="option">An Entire Location</span>
                            </label>
                        </div>
                        <div>
                            <label class="radio_label">
                                @Html.RadioButtonFor(GroupModel => GroupModel.Purchase.WhichAreYouSeekingToOutfit, "Multiple Locations", new { @name = "radio3", required = "required" })
                                <span class="radio_btn gray"></span>
                                <span class="option">Multiple Locations</span>
                            </label>
                        </div>
                        <div class="validation-text">Input invalid. Insert validation text here.</div>
                    </div>
                </div>
            </div>
            <div class="section3">
                <div class="inner_container">
                    <h2 class="title">Please Indicate Which of the Following You Will Need</h2>
                    <div class="two_column need_container">
                        <div class="row1">
                            <div>
                                <label>Scrubs</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedScrubs, true, new { @name = "radio4", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedScrubs, false, new { @name = "radio4", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                            <div>
                                <label>Lab Coats</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedLabCoats, true, new { @name = "radio5", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedLabCoats, false, new { @name = "radio5", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                            <div>
                                <label>Printed Tops</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedPrintedTops, true, new { @name = "radio6", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedPrintedTops, false, new { @name = "radio6", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                        </div>
                        <div class="row2">
                            <div>
                                <label>Embroidery</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedEmbroidery, true, new { @name = "radio7", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedEmbroidery, false, new { @name = "radio7", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                            <div>
                                <label>Non Medical</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedNonMedical, true, new { @name = "radio8", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedNonMedical, false, new { @name = "radio8", required = "required"})
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                            <div>
                                <label>Customized</label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedCustomized, true, new { @name = "radio9", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">Yes</span>
                                </label>
                                <label class="radio_label">
                                    @Html.RadioButtonFor(GroupModel => GroupModel.Necessity.NeedCustomized, false, new { @name = "radio9", required = "required" })
                                    <span class="radio_btn"></span>
                                    <span class="option">No</span>
                                </label>
                            </div>
                        </div>
                        <div class="validation-text">Input invalid. Insert validation text here.</div>
                    </div>
                    <div class="divider"></div>
                    <div class="title title2">Additional Comments</div>
                    @Html.TextAreaFor(GroupModel => GroupModel.Comments)
                    <div class="validation-text">Input invalid. Insert validation text here.</div>
                    <input type="submit" value="SUBMIT" />
                </div>
            </div>
        }
        <!-- </form> -->
    </div>
</div>

<script src="public/js/logic/groups.js"></script>
