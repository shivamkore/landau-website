@using ZtherApiIntegration.Models.Favorites
@using ZtherApiIntegration.Common
@model FavoritesModel

<div id="favorites_page">
    <div class="top">
        <h1 class="title">My Favorites</h1>
        <div class="links">
            <div class="count">
                Displaying
                <span>0</span> 
                Items
            </div>
            <a class="email" href="@UrlBuilder.BuildFullUrl(UrlEnum.FAVS_EMAIL)">
                <span class="mail_icon">&#xe806;</span>
                <span class="text">Email This List</span>
            </a>
            <div class="print" onclick="{ window.print(); }">
                <span class="printer_icon">&#xe807;</span>
                <span class="text">Print This List</span>
            </div>
        </div>
    </div>

    <div class="favorites_container">
        @Html.Partial("~/Views/Partials/Favorites/_FavoriteItemPartial.cshtml", Model)
    </div>

</div>
<script src="public/js/logic/favorites.js"></script>