        <!-- Size Chart Partial -->
        @Html.Partial("~/Views/Partials/Detail/_SizeChartPartial.cshtml", Model)

    </div>
    <div class="detail_top">
        
        <!-- Detail Left Partial  -->
        @Html.Partial("~/Views/Partials/Detail/_DetailLeftPartial.cshtml")
        
        <!-- Detail Right Partial  -->
        @Html.Partial("~/Views/Partials/Detail/_DetailRightPartial.cshtml", Model)

    </div>
    
    <div class="center_container">
        <!-- Coordinates With Partial -->
        @Html.Partial("~/Views/Partials/Detail/_CoordinatesWithPartial.cshtml", Model)
        <!-- Buy Now Partial -->
        @Html.Partial("~/Views/Partials/Detail/_BuyNowPartial.cshtml", Model)
    </div>

    <!-- Customer Reviews Partial -->
    @Html.Partial("~/Views/Partials/Detail/_CustomerReviewsPartial.cshtml", Model)
    
</div>

